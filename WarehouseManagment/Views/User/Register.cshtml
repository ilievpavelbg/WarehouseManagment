@model RegisterViewModel

@{
    ViewData["Title"] = "Регистрация на нов потребител";
}

<h2 class="text-center">@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.FirstNane">Име</label>
                <input class="form-control " autocomplete="on" aria-required="true" asp-for="@Model.FirstNane" placeholder="Въведете име - полето е задължително"/>
                <span asp-validation-for="@Model.FirstNane" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.LastNane">Фамилия</label>
                <input class="form-control " autocomplete="on" aria-required="true" asp-for="@Model.LastNane" placeholder="Въведете фамилия - полето е задължително" />
                <span asp-validation-for="@Model.LastNane" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.UserName">Потребителско име</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.UserName" placeholder="Въведете потребителско име - полето е задължително" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Email">Имейл</label>
                <input class="form-control " autocomplete="on" aria-required="true" asp-for="@Model.Email" placeholder="Въведете email - полето е задължително" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
             <div class="text-center mb-3">
                <label asp-for="@Model.PhoneNumber">Телефон</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.PhoneNumber" placeholder="Въведете телефон - полето е задължително" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password">Парола</label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" placeholder="Парола - полето е задължително" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.ConfirmPassword">Потвърди паролата</label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" placeholder="Потвърдете паролата - полето е задължително" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">РЕГИСТРАЦИЯ</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

