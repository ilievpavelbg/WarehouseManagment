@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
            <a class="nav-link" asp-action="Logout" asp-controller="User">Изход</a>
    </li>
        if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link" asp-action="Register" asp-controller="User">Регистрация</a>
            </li>
        }
}
else
{
    
    <li class="nav-item">
            <a class="nav-link" asp-action="Login" asp-controller="User">Вход</a>
    </li>
}
</ul>
